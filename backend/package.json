{
  "name": "galloping-gears",
  "version": "1.0.0",
  "description": "A horse selling platform for India",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node scripts/seedData.js",
    "test": "mocha scripts/testEndpoints.js",
    "test:debug": "mocha scripts/testEndpoints.js --debug",
    "test:ordered": "mocha scripts/orderedTests.js",
    "test:ordered:debug": "mocha scripts/orderedTests.js --debug",
    "test:subscription": "mocha scripts/testSubscriptionFeatures.js",
    "test:subscription:debug": "mocha scripts/testSubscriptionFeatures.js --debug",
    "test:payment": "mocha scripts/testPaymentFeatures.js",
    "test:payment:debug": "mocha scripts/testPaymentFeatures.js --debug",
    "test:dashboard": "mocha scripts/sellerDashboardTests.js",
    "test:dashboard:debug": "mocha scripts/sellerDashboardTests.js --debug",
    "test:journey": "mocha scripts/sellerJourneyTests.js",
    "test:journey:debug": "mocha scripts/sellerJourneyTests.js --debug",
    "test:buyer": "mocha scripts/buyerJourneyTests.js",
    "test:buyer:debug": "mocha scripts/buyerJourneyTests.js --debug",
    "test:all": "mocha --require @babel/register scripts/allEndpointsTests.js --timeout 10000",
    "test:all:debug": "mocha --require @babel/register scripts/allEndpointsTests.js --debug --timeout 10000",
    "simulate:payment": "node scripts/simulatePayment.js"
  },
  "keywords": [
    "horse",
    "marketplace",
    "india",
    "ecommerce"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.0",
    "lucide-react": "^0.469.0",
    "mongoose": "^6.10.0",
    "morgan": "^1.10.0",
    "razorpay": "^2.8.6",
    "react-router-dom": "^7.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/register": "^7.23.7",
    "axios": "^1.7.9",
    "cloudinary": "^2.5.1",
    "colors": "^1.4.0",
    "dotenv": "^16.4.7",
    "mocha": "^11.0.1",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.3"
  }
}
